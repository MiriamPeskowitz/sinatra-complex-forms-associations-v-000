<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>
  
  <br></br>
  
  <input 
  	type="text" 
  	name="pet[name]" 
  	id="pet_name">
  
  <br></br>
  

 <label>Choose your owner</label>
	


	<% Owner.all.each do |owner|%>
	    <input 
	    	type="radio" 
	    	name="pet[owner_id][]" 
	    	id="<%=owner.name%>"
	    	value="<%=owner.id%>">
	    	<%=owner.name%>
	    	</input>
	<%end%>


<label>and/or, create a new owner:</label>
	    <br></br>

	    <label>name:</label>
	      <input  type="text" name="owner[name]" id="owner_name"></input>
	    <br></br>

	  <input type="submit" value="Create Pet">
</form>

